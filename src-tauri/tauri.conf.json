{
    "build": {
      "beforeDevCommand": "npm run dev",
      "beforeBuildCommand": "npm run build",
      "devPath": "http://localhost:1420",
      "distDir": "../dist",
      "withGlobalTauri": true
    },
    "package": {
      "productName": "Build Patch Tool",
      "version": "1.0.5"
    },
    "tauri": {
      "allowlist": {
        "all": false,
        "dialog": {
          "all": true
        },
        "shell": {
          "all": false,
          "open": true
        },
        "fs": {
          "readFile": true,
          "writeFile": true,
          "exists": true,
          "scope": ["**"]
        },
        "path": {
          "all": true 
        }
      },
      "bundle": {
        "active": true,
        "icon": [
          "icons/14x14.png",
          "icons/16x16.png",
          "icons/32x32.png",
          "icons/128x128.png",
          "icons/128x128@2x.png",
          "icons/icon.icns",
          "icons/icon.ico"
        ],
        "identifier": "build.patch.tool",
        "targets": "all"
      },
      "security": {
        "csp": null
      },
      "updater": {
        "active": false
      },
      "windows": [
        {
          "fullscreen": false,
          "resizable": false,
          "title": "Build Patch Tool - 1.0.5",
          "width": 600,
          "height": 1000,
          "alwaysOnTop": true
        }
      ]
    }
  }
  